# Solana Trading Bot Configuration
# Copy this file to .env.solana and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Solana RPC endpoint (use a paid RPC for production)
# Free options: https://api.mainnet-beta.solana.com (rate limited)
# Recommended: Helius, QuickNode, or Alchemy for production
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Your wallet private key
# Can be base58 encoded or JSON array format
# WARNING: Never share or commit this key!
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# =============================================================================
# SELF-FUNDING MODE (Start with $0!)
# =============================================================================

# Enable self-funding mode (uses flash loans to bootstrap capital)
SELF_FUNDING_MODE=true

# Enable flash loan arbitrage
ENABLE_FLASH_LOANS=true

# Bootstrap mode: Start with $0 and accumulate capital via flash loans
BOOTSTRAP_MODE=true

# Target capital before switching to regular trading (default: 100)
TARGET_BOOTSTRAP_CAPITAL=100

# Minimum profit % to execute flash loan arbitrage (default: 0.1)
MIN_FLASH_LOAN_PROFIT=0.1

# Maximum flash loan size in USDC (default: 5000)
MAX_FLASH_LOAN_SIZE=5000

# Interval for scanning arbitrage opportunities in ms (default: 10000)
FLASH_LOAN_INTERVAL_MS=10000

# =============================================================================
# BACKTESTING
# =============================================================================

# Run backtest before starting live trading
RUN_BACKTEST=true

# Number of days to backtest (default: 30)
BACKTEST_DAYS=30

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Initial capital in USDC (default: 100, set to 0 for bootstrap mode)
INITIAL_CAPITAL=0

# Maximum slippage in basis points (default: 50 = 0.5%)
SLIPPAGE_BPS=50

# Interval between trading cycles in milliseconds (default: 5000)
INTERVAL_MS=5000

# Maximum number of concurrent positions (default: 3)
MAX_POSITIONS=3

# Position size as percentage of capital (default: 30)
POSITION_SIZE_PERCENT=30

# Minimum trade size in USDC (default: 5)
MIN_TRADE_SIZE=5

# Take profit percentage (default: 0.5)
TAKE_PROFIT_PERCENT=0.5

# Stop loss percentage (default: 0.3)
STOP_LOSS_PERCENT=0.3

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Maximum drawdown before stopping (default: 10%)
MAX_DRAWDOWN_PERCENT=10

# Maximum daily loss before stopping (default: 5%)
MAX_DAILY_LOSS_PERCENT=5

# Number of price points to keep in history (default: 60)
PRICE_HISTORY_LENGTH=60
